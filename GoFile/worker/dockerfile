FROM python:3.10-slim

# Install system deps
RUN apt-get update && apt-get install -y \
    libreoffice \
    libreoffice-writer \
    libreoffice-impress \
    libreoffice-calc \
    poppler-utils \
    ghostscript \
    fonts-dejavu \
    && rm -rf /var/lib/apt/lists/*

# Verify soffice exists
RUN soffice --version

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY worker.py .

CMD ["python", "worker.py"]
